<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.game_rockpaperscissors.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="Text" alignment="CENTER" text="Выберите иконку!">
      <font><Font name="Arial Black" size="14.0" /></font></Label>

    <HBox alignment="CENTER" spacing="5.0" xmlns:fx="http://javafx.com/fxml">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />

        </padding>

        <StackPane minHeight="150" minWidth="150" stylesheets="@light.css">
            <ImageView fitHeight="150.0" fitWidth="150.0">
                <image><Image url="E:\Project_JAVA\Game_RockPaperScissors\src\main\resources\image_png\image_random.png" /></image></ImageView>
            <Button fx:id="ButtonRandom" alignment="CENTER" cancelButton="true" minHeight="150" minWidth="150" onAction="#ButtonClick_Random" opacity="0.95" text="Random" visible="true">
                <font><Font size="18.0" /></font></Button>
        </StackPane>

        <StackPane minHeight="150" minWidth="150" stylesheets="@light.css">
            <ImageView fitHeight="150.0" fitWidth="150.0">
                <image><Image url="E:\Project_JAVA\Game_RockPaperScissors\src\main\resources\image_png\image_rock.png" /></image></ImageView>
            <Button fx:id="ButtonRock" alignment="CENTER" cancelButton="true" minHeight="150" minWidth="150" onAction="#ButtonClick_Rock" opacity="0.95" text="Камень" visible="true">
                <font><Font size="18.0" /></font></Button>
        </StackPane>

        <StackPane minHeight="150" minWidth="150" stylesheets="@light.css">
            <ImageView fitHeight="150.0" fitWidth="150.0">
                <image><Image url="E:\Project_JAVA\Game_RockPaperScissors\src\main\resources\image_png\image_paper.png" /></image></ImageView>
            <Button fx:id="ButtonPaper" alignment="CENTER" cancelButton="true" minHeight="150" minWidth="150" onAction="#ButtonClick_Paper" opacity="0.95" text="Бумага" visible="true">
                <font><Font size="18.0" /></font></Button>
        </StackPane>

        <StackPane minHeight="150" minWidth="150" stylesheets="@light.css">
            <ImageView fitHeight="150.0" fitWidth="150.0">
                <image><Image url="E:\Project_JAVA\Game_RockPaperScissors\src\main\resources\image_png\image_scissors.png" /></image></ImageView>
            <Button fx:id="ButtonScissors" alignment="CENTER" cancelButton="true" minHeight="150" minWidth="150" onAction="#ButtonClick_Scissors" opacity="0.95" text="Ножницы" visible="true">
                <font><Font size="18.0" /></font></Button>
        </StackPane>

    </HBox>

    <HBox alignment="CENTER" spacing="50.0">
        <Label fx:id="PersonalText" alignment="CENTER" text="Рандом">
            <font><Font name="Arial Black" size="14.0" /></font></Label>
        <Label fx:id="AIText" alignment="CENTER" text="Рандом">
            <font><Font name="Arial Black" size="14.0" /></font></Label>
    </HBox>

    <Label fx:id="Result" alignment="CENTER" text="Ничья">
        <font><Font name="Arial Black" size="22.0" /></font></Label>

</VBox>
